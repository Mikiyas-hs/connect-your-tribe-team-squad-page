{% render 'partials/head.liquid' %}

    <link rel="stylesheet" href="teampacks.css">


<main>
    <!--team packs-->
    <section class="team-pack-container " id="teamPackContainer">
     {% for pack in (1..6) %}
        <article class="team-pack"> 
            <a href="#" class="pack" data-team-name="{{teamName}}">
                <img src="/assets/images/image 7.png" alt="team-pack">
                <h1>open team {{ teamName }}</h1>
            </a>
        </article>
        {% endfor %}
    </section>

        <!-- Loader Animation -->
        <section id="loader" class="hidden">
            <svg class="loader spinner"
            viewBox="0 0 100 100" overflow="visible">        
                <g class="core">
                  <circle class="path" cx="50" cy="50" r="1" fill="none" />
                </g>
                <g class="layer-1">
                  <circle class="path" cx="50" cy="50" r="70" fill="none" />
                </g>
                <g class="layer-2">
                  <circle class="path" cx="50" cy="50" r="120" fill="none" />
                </g>
                <g class="layer-3">
                  <circle class="path" cx="50" cy="50" r="180" fill="none" />
                </g>
                <g class="layer-4">
                  <circle class="path" cx="50" cy="50" r="240" fill="none" />
                </g>
                <g class="layer-5">
                  <circle class="path" cx="50" cy="50" r="300" fill="none" />
                </g>
                <g class="layer-6">
                  <circle class="path" cx="50" cy="50" r="380" fill="none" />
                </g>
                <g class="layer-7">
                  <circle class="path" cx="50" cy="50" r="450" fill="none" />
                </g>
                <g class="layer-8">
                  <circle class="path" cx="50" cy="50" r="540" fill="none" />
                </g>
              </svg>
         </section>
        

         <!--team member reveal-->

    <section class="team-container hidden" id="teamContainer">
        <h1 id="teamTitle">Team {{teamName}}</h1>
        <article class="team-member person">
            <img class="fifa-card" src="/assets/images/fifa card 11.png" alt="">
            <div class="person-card-content">
                <img src="{{personAvatar}}" alt="">
                <h2>{{personName}}</h2>
                <h3>{{PersonId}}</h3>
            </div>
        </article>
    </section>

    <!--love me again sound-->
    <iframe class="hidden" id="openingSound" style="border-radius:12px" src="https://open.spotify.com/embed/track/5TbzAWWc5eJaANpA9kfGCd?utm_source=generator" 
    width="100%" height="352" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" 
    loading="lazy"></iframe>

</main>

<script src="script.js"> </script>

